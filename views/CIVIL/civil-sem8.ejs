<%- include('../partials/header'); -%>

<header>
  <h1 class="mainHeading">GPA CALCULATOR</h1>
  <h3 class="universityName">ANNA UNIVERSITY 2017 REGULATION</h3>
  <h4 class="courseDetails">Dept:CIVIL Sem:8</h4>
</header>
<form action="/civil-sem8" method="post">
  <div class="container">
    <table>
      <thead class="tableBar">
        <tr>
          <th>SUBJECTS</th>
          <th>CREDITS</th>
          <th>GRADE</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>1 Professional Elective IV</td>
          <td>
            <input
              type="number"
              required
              value="3"
              name="credit1"
              id="creditSub1"
              min="1"
              max="4"
            />
          </td>
          <td>
            <select name="grade1" id="gradeSub1">
              <option value="O">O</option>
              <option value="A+">A+</option>
              <option value="A">A</option>
              <option value="B+">B+</option>
              <option value="B">B</option>
              <option value="U">U</option>
            </select>
          </td>
        </tr>
        <tr>
          <td>2 Professional Elective V</td>
          <td>
            <input
              type="number"
              required
              value="3"
              name="credit2"
              id="creditSub2"
              min="1"
              max="4"
            />
          </td>
          <td>
            <select name="grade2" id="gradeSub2">
              <option value="O">O</option>
              <option value="A+">A+</option>
              <option value="A">A</option>
              <option value="B+">B+</option>
              <option value="B">B</option>
              <option value="U">U</option>
            </select>
          </td>
        </tr>

        <!-- Practicals Break -->
        <tr>
          <th class="practicals-break">PRACTICAL SUBJECTS</th>
          <th class="practicals-break">CREDITS</th>
          <th class="practicals-break">GRADE</th>
        </tr>

        <tr>
          <td>3 Project Work - CE8811</td>
          <td>
            <input
              type="number"
              required
              value="10"
              name="credit3"
              id="creditSub3"
              min="1"
              max="10"
            />
          </td>
          <td>
            <select name="grade3" id="gradeSub3">
              <option value="O">O</option>
              <option value="A+">A+</option>
              <option value="A">A</option>
              <option value="B+">B+</option>
              <option value="B">B</option>
              <option value="U">U</option>
            </select>
          </td>
        </tr>
      </tbody>
    </table>

    <div class="calculateGpaButton">
      <button class="button" name="calculate">CALCULATE GPA</button>
    </div>
  </div>
</form>

<%- include("../partials/footer"); -%>
